<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/diffCardView"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/creamYellow"
        app:cardElevation="4dp"

        app:cardCornerRadius="5dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:id="@+id/diff_Rlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <me.grantland.widget.AutofitTextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/question_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                autofit:autoSizeMinTextSize="14sp"
                android:textSize="16sp"/>
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/user1_pic_diff"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:visibility="gone"/>

            <me.grantland.widget.AutofitTextView
                android:layout_gravity="center_vertical"
                android:id="@+id/answer1_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginEnd="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/user2_pic_diff"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"/>



            <me.grantland.widget.AutofitTextView
                android:id="@+id/answer2_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"/>
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>