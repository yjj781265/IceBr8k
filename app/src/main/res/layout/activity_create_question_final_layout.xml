<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".CreateQuestionActivities.CreateQuestionFinalLayout">

    <android.support.v7.widget.Toolbar
        android:theme="@style/MyActionBarTheme"
        android:id="@+id/create_question_final_toolbar"
        android:background="@color/colorPrimary"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        app:title="Back"
        android:layout_height="56dp">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <include layout="@layout/item_survey_mc"
        android:id="@+id/create_question_final_mc_layout"
        android:visibility="gone"/>
    <include layout="@layout/item_survey_sc"
        android:id="@+id/create_question_final_sc_layout"
        android:visibility="gone"/>

        <TextView
            android:id="@+id/mc_answer_view_final_layout_btn"
            android:layout_gravity="end"
            android:layout_margin="24dp"
            android:textColor="@color/white"
            android:padding="8dp"
            android:text="@string/submit"
            android:foreground="?selectableItemBackground"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>





</LinearLayout>