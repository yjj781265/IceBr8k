<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="2dp"
    android:animateLayoutChanges="true"
    android:elevation="2dp"
    tools:ignore="HardcodedText">


    <ImageView
        android:id="@+id/outcoming_image_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/outcoming_image_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/camera_selector"/>


    <ImageView


        android:id="@+id/outcoming_image_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="image"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:scaleType="fitCenter"
        android:transitionName="photoView"
        app:layout_constraintBottom_toTopOf="@+id/outcoming_image_time"
        app:layout_constraintEnd_toStartOf="@+id/outcoming_image_avatar"/>


    <TextView
        android:id="@+id/outcoming_image_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textSize="12sp"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/outcoming_image_imageView"
        tools:text="123"/>


    \
</android.support.constraint.ConstraintLayout>