<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:animateLayoutChanges="true"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
    >

    <RelativeLayout
        android:id="@+id/avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"

        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/location_avatar"
            android:layout_marginLeft="10dp"

            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:id="@+id/location_onlineStats"
            android:elevation="10dp"
            android:layout_alignBottom="@+id/location_avatar"
            android:layout_alignRight="@+id/location_avatar"
            android:layout_margin="2dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:id="@+id/location_Rlayout"

        >

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            tools:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/location_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:layout_below="@id/location_name"
            android:textSize="14dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_score"
                android:gravity="center"
                android:textSize="18dp"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_distance"
                android:gravity="center"
                android:textSize="14dp"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>