<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mBubbleTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.jayang.icebr8k.Homepage">

    <android.support.v7.widget.Toolbar
        android:id="@+id/users_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="IceBr8k"
        app:titleTextColor="@android:color/white">

    </android.support.v7.widget.Toolbar>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/homepageTab"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/custom_tabs">


    </com.roughike.bottombar.BottomBar>


    <android.support.v4.view.ViewPager
        android:id="@+id/homepage_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/homepageTab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/users_toolbar"
        android:background="@android:color/white"></android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/red_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/homepage_viewpager"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:baselineAlignBottom="true"
        android:contentDescription="@null"
        android:src="@drawable/red_dot"/>

    <ImageView
        android:id="@+id/imageBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/homepage_viewpager"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:src="@drawable/user_profile_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"/>

</RelativeLayout>
