<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"

        android:id="@+id/survey_feedback_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/creamYellow"
        app:cardCornerRadius="8dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/survey_feedback_pannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:visibility="visible">

            <com.dd.processbutton.FlatButton
                android:id="@+id/survey_feedback_moreq"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_width="134dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="@string/more_questions"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/survey_feedback_connect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pb_colorNormal="@color/colorPrimaryDark"
                app:pb_colorPressed="@color/colorPrimaryDark"
                />

            <com.dd.processbutton.FlatButton
                android:id="@+id/survey_feedback_connect"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"

                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="@string/connect"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/survey_feedback_moreq"
                app:layout_constraintTop_toTopOf="parent"
                app:pb_colorNormal="@color/colorPrimary"
                app:pb_colorPressed="@color/colorPrimary"
                />

            <com.dd.processbutton.FlatButton
                android:id="@+id/_feedback"
                android:layout_width="134dp"
                android:layout_height="40dp"

                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:text="@string/leave_feedback"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/survey_feedback_connect"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toEndOf="@+id/survey_feedback_moreq"
                app:layout_constraintTop_toBottomOf="@+id/survey_feedback_connect"
                app:pb_colorNormal="@color/colorAccent"
                app:pb_colorPressed="@color/colorAccent"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>