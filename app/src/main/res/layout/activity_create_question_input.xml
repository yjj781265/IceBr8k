<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/input_question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:theme="@style/MyActionBarTheme"
        app:title="Back">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/input_question_container"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/creamYellow">

        <EditText
            android:id="@+id/input_question_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/transparent"
            android:hint="@string/type_your_question_here"
            android:maxLength="75"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/input_question_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:maxLines="1" />


    </FrameLayout>

    <TextView
        android:textSize="14dp"
        android:padding="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/rounded_rectangle"
        android:textColor="@color/white"
        android:id="@+id/mc_question_btn"
        android:layout_margin="16dp"
        android:layout_gravity="end"
        android:text="@string/go_to_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>