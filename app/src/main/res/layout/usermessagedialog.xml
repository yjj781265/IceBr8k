<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageDialog"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/messageDialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/messageDialog_avatar"
            android:background="@drawable/default_avatar3"
            android:layout_weight="0"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/messageDialog_unread"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:background="@drawable/badge_circle"
            android:layout_marginLeft="-25dp"
            android:padding="5dp"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="8dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_weight="10"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageDialog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:scrollbars="none"
                android:text="Stephen Hearrington babdfsf"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/messageDialog_lastmessage"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="ffffffffffffffffffffffffffffffffffffdsffsfsfsdfsfdfsdfsfsfdsffdsfsffffffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:id="@+id/messageDialog_date"
                android:layout_width="match_parent"
                android:text="12/31/20172"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp" />
            <ImageView
                android:layout_marginTop="6dp"
                android:id="@+id/messageDialog_notification_off"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_notification_off"
               />
        </LinearLayout>



    </LinearLayout>
    <View
        android:id="@+id/dialogDivider"
        android:layout_below="@id/messageDialog_container"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_divider"/>

</RelativeLayout>