<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="app.jayang.icebr8k.login_page"
    android:background="@drawable/background_3"

    >
    <com.shaishavgandhi.loginbuttons.GooglePlusButton
        android:id="@+id/sign_in_button"
        android:layout_width="220dp"
        android:layout_height="40dp"
        app:roundedCorner="true"
        android:text="Sign in with Google"


        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>



    <com.shaishavgandhi.loginbuttons.FacebookButton
        android:id="@+id/fb_login_button"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    app:roundedCorner="true"
        android:text="Sign in with Facebook"


        android:layout_marginTop="34dp"
        android:layout_below="@+id/sign_in_button"
        android:layout_alignRight="@+id/sign_in_button"
        android:layout_alignEnd="@+id/sign_in_button" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:text="Username"

        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@id/username"
        android:layout_centerHorizontal="true"
        android:text="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Signout" />



</RelativeLayout>
