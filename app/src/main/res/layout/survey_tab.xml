<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:fancy="http://schemas.android.com/tools"
                android:background="@drawable/brainstorm">






    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:progress="0"
        android:id="@+id/survey_progressBar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.9"
        android:visibility="visible"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/cardView_RLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:visibility="visible">
            <ProgressBar
                android:id="@+id/progressBar2"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/question_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sub_question_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_id"
                android:layout_margin="5dp"
                android:shadowColor="@android:color/darker_gray"
                android:text="1:Hate it ,10:Love it"
                android:textSize="14sp"
                android:visibility="invisible"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_id"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="invisible">

            </RadioGroup>

            <Spinner
                android:id="@+id/spinner_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_id"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:popupBackground="@color/colorAccent"
                android:visibility="invisible"></Spinner>


            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_id"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:visibility="invisible"
                app:bsb_max="10"
                app:bsb_min="1"
                app:bsb_progress="5"
                app:bsb_bubble_color="@color/colorAccent"
                app:bsb_bubble_text_color="@color/colorPrimary"
                app:bsb_touch_to_seek="true"
                app:bsb_second_track_color="@color/colorAccent"
                app:bsb_show_progress_in_float="false"
                app:bsb_always_show_bubble="false"
                app:bsb_show_thumb_text="true"
                app:bsb_section_count="5"
                app:bsb_show_section_text="true"
                app:bsb_is_float_type="true"
                app:bsb_track_color="@color/colorPrimaryDark"/>

            <Button

                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="confirm"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/skip_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/submitBtn"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:text="Skip"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:visibility="visible"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>





</RelativeLayout>