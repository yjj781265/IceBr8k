<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:background="@color/primary"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        custom:cardCornerRadius="12dp"
        android:background="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:background="@color/primary"
       android:layout_gravity="center"
       android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compareText"
        android:text="Compare with yjj950406"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:background="@color/primary"
        android:textColor="@android:color/white"/>
    <com.github.lzyzsd.circleprogress.ArcProgress
        android:layout_below="@id/compareText"
        android:layout_marginTop="50dp"
        android:id="@+id/arc_progress"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        custom:arc_text_color="@color/colorAccent"
        custom:arc_bottom_text_size="20sp"
        custom:arc_text_size="60dp"
        custom:arc_suffix_text_size="25sp"
        custom:arc_progress="55"
        custom:arc_bottom_text="Score"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView

        android:layout_width="wrap_content"
        android:id="@+id/details_btn"
        android:layout_height="wrap_content"
        android:layout_below="@id/arc_progress"
        android:text="Details"
        android:alpha="0.9"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:paddingRight="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/cancel_btn"
        android:layout_height="wrap_content"
        android:layout_below="@id/arc_progress"
        android:text="Cancel"
        android:alpha="0.9"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textSize="16dp"
        android:layout_toLeftOf="@id/details_btn"
        android:layout_margin="20dp"/>
   </RelativeLayout>


</android.support.v7.widget.CardView>