<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/white">
    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:background="@color/creamYellow"
        android:visibility="visible"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/cardView_RLayout"
            android:padding="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/creamYellow"
            android:visibility="visible">

            <ImageView
                android:id="@+id/backarrow_survey"
                android:layout_width="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_action_backarrow"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible"
                android:text="1/8"
                android:layout_height="wrap_content"/>


            <ProgressBar
                android:id="@+id/loading_progressbar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/progress_text"
                android:id="@+id/question_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <me.grantland.widget.AutofitTextView
                android:id="@+id/question_id"
                android:text="What is your name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/favorite_btn"
                android:layout_marginBottom="5dp"
                android:paddingStart="9dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="20sp"
                android:maxLines="3"
                app:minTextSize="16sp"/>

            <TextView
                android:id="@+id/sub_question_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_id"
                android:paddingStart="9dp"
                android:shadowColor="@android:color/darker_gray"
                android:text="1:Hate it  10:Love it"
                android:textSize="14sp"
                android:visibility="visible"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="9dp"
                android:layout_below="@id/sub_question_id"
                android:layout_alignWithParentIfMissing="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:visibility="invisible">

            </RadioGroup>

            <Spinner
                android:id="@+id/spinner_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_question_id"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:popupBackground="@color/colorAccent"
                android:visibility="invisible"></Spinner>






            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_question_id"
                android:layout_margin="13dp"
                app:bsb_max="10"
                app:bsb_min="1"
               app:bsb_seek_by_section="true"
                app:bsb_progress="5"
                app:bsb_second_track_color="@color/colorAccent"
                app:bsb_section_count="9"
                app:bsb_show_thumb_text="false"
                app:bsb_show_section_text ="true"
                app:bsb_show_section_mark="true"
                app:bsb_touch_to_seek="true"
                app:bsb_hide_bubble="true"
                app:bsb_section_text_position="below_section_mark"
                android:visibility="gone"
                />
            </LinearLayout>

            <com.beardedhen.androidbootstrap.BootstrapButton

                android:id="@+id/submitBtn"
                android:layout_below="@id/question_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Confirm"
                android:textSize="14sp"
                android:visibility="gone"
                app:bootstrapBrand="success"
                app:buttonMode="regular"
                app:roundedCorners="true">


            </com.beardedhen.androidbootstrap.BootstrapButton>

            <TextView
                android:id="@+id/skip_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:text="Skip"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/favorite_btn"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:src="@drawable/ic_action_start_selector"
                android:layout_width="30dp"
                android:layout_height="30dp"/>


        </RelativeLayout>



    </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        android:layout_marginBottom="5dp"
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cardView"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="23dp"
        android:clickable="true"
        android:src="@drawable/ic_action_refresh"
        app:backgroundTint="@color/colorAccent"/>





</RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/survey_loading"
        android:layout_centerInParent="true"
        android:paddingBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loadingImg"
            android:layout_centerHorizontal="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/icebr8k_load"
            android:paddingTop="10dp"
            android:paddingLeft="6dp"
            />

        <TextView
            android:id="@+id/chatFregLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:text="Loading..."/>

    </RelativeLayout>
</RelativeLayout>