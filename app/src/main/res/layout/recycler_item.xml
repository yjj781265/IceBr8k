<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:animateLayoutChanges="true"
    android:layout_height="wrap_content"
    android:gravity="start"

    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <RelativeLayout
        android:id="@+id/avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageview_id"
        android:layout_marginLeft="10dp"

        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:id="@+id/onlineStats"
            android:elevation="10dp"
            android:layout_alignBottom="@+id/imageview_id"
            android:layout_alignRight="@+id/imageview_id"
            android:layout_margin="2dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:id="@+id/user_item_RLayout"

       >

        <TextView
            android:id="@+id/displayname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            tools:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:layout_below="@id/displayname_textview"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/score"
            android:layout_alignParentEnd="true"
            android:text="30%"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>


</LinearLayout>