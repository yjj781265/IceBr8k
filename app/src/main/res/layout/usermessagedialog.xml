<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageDialog"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
    android:padding="16dp"
        android:id="@+id/messageDialog_container"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/messageDialog_avatar_container"



            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/messageDialog_avatar"
                android:background="@drawable/default_avatar3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/messageDialog_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/badge_circle"
                android:gravity="center"
                android:padding="2dp"
                android:text="99"
                android:textColor="#FFF"
                android:textSize="11dp"
                android:textStyle="bold" />


        </LinearLayout>





        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/messageDialog_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Junjie Yang and "
                    android:scrollHorizontally="true"
                    android:scrollbars="none"
                    android:textColor="@color/black"
                    android:textSize="16sp" />



                <TextView
                    android:layout_weight="1"
                    android:gravity="end"
                    android:id="@+id/messageDialog_date"
                    android:layout_width="0dp"
                    android:text="Yesterday"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13sp" />


            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/messageDialog_lastmessage"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="16"
                    android:textSize="14sp"
                    android:text="HOw is the project going , and the fu1231231321nd best d d d? d" />
                <ImageView

                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:visibility="visible"
                    android:id="@+id/messageDialog_notification_off"
                    android:layout_width="0dp"
                    android:layout_height="16sp"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/icon_notification_off"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>





    <View

        android:id="@+id/dialogDivider"
       android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_divider"/>

</RelativeLayout>