<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorPrimary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/compareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Compare with yjj950406"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/compareText"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            custom:arc_bottom_text="Score"
            custom:arc_bottom_text_size="20sp"
            custom:arc_suffix_text_size="25sp"
            custom:arc_text_color="@color/creamYellow"
            custom:arc_text_size="60sp"
            custom:arc_finished_color="@color/colorAccent"
            custom:arc_unfinished_color="@color/gray_light"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_below="@id/arc_progress"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical|end"
            android:layout_height="wrap_content">



        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/arc_progress"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/details_btn"
            android:alpha="0.9"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

            <TextView

                android:id="@+id/details_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/arc_progress"
                android:alpha="0.9"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"

                android:text="Details"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>