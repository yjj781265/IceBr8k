<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="app.jayang.icebr8k.MainChatActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
       ></android.support.v7.widget.Toolbar>

    <com.stfalcon.chatkit.messages.MessageInput
        android:id="@+id/input_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusedByDefault="true"
        app:inputBackground="@color/creamYellow"
        app:inputButtonDefaultBgColor="@color/colorPrimary"
        app:inputHint="Enter a message"/>


    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input_message"
        android:labelFor="@id/chat_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chat_toolbar"
        app:incomingDefaultBubbleColor="@color/colorAccent"
        app:incomingDefaultBubblePressedColor="@color/colorPressed"
        app:incomingDefaultBubbleSelectedColor="@color/colorPressed"
        app:incomingTextColor="@color/black"
        app:incomingTextLinkColor="@color/dark_gray"
        app:outcomingDefaultBubbleColor="@color/colorPrimary"
        app:outcomingDefaultBubblePressedColor="@color/colorPrimaryDark"
        app:outcomingTextColor="@color/white"
        app:outcomingTextLinkColor="@color/creamYellow"
        app:textAutoLink="all"/>




</RelativeLayout>
