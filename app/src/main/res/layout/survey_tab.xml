<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <android.support.v7.widget.CardView
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:id="@+id/cardView"
      app:cardCornerRadius="5dp">
        <RelativeLayout
            android:id="@+id/cardView_RLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android or Apple"
            android:textSize="25sp"
            android:id="@+id/question_id"
            android:layout_margin="10dp"
            android:textStyle="bold"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_id"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:id="@+id/radioGroup">

        </RadioGroup>


            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:bsb_bubble_color="@color/colorAccent"
                app:bsb_bubble_text_color="@color/colorPrimary"
                app:bsb_max="10"
                app:bsb_min="0"
                app:bsb_progress="5"
                app:bsb_second_track_color="@color/colorAccent"
                app:bsb_section_count="5"
                app:bsb_section_text_position="bottom_sides"
                app:bsb_show_progress_in_float="true"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                android:layout_below="@id/question_id"
                app:bsb_track_color="@color/colorPrimaryDark"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:id="@+id/submitBtn"
                android:text="Confirm"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>






  </android.support.v7.widget.CardView>






</RelativeLayout>