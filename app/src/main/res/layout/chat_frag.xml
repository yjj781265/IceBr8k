<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.stfalcon.chatkit.dialogs.DialogsList
        android:id="@+id/dialogsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        app:dialogAvatarHeight="48dp"
        app:dialogAvatarWidth="48dp"
        app:dialogDividerEnabled="true"
        app:dialogDividerLeftPadding="0dp"
        app:dialogItemBackground="@color/white"
        app:dialogMessageTextSize="14dp"
        app:dialogTitleTextSize="16dp"
        app:dialogDateSize="14dp"
        app:dialogUnreadBubbleBackgroundColor="@android:color/holo_red_light"
        app:dialogUnreadBubbleEnabled="true"
        app:dialogUnreadMessageTextStyle="bold"
        app:dialogUnreadTitleTextStyle="bold"/>

    <RelativeLayout
        android:id="@+id/loadingImg_chatTab"
        android:layout_centerInParent="true"
        android:paddingBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loadingImg"
            android:layout_centerHorizontal="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/icebr8k_load"
            android:paddingTop="10dp"
            android:paddingLeft="6dp"
            />

        <TextView
            android:id="@+id/chatFregLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:text="Loading..."/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="No Conversations"
        android:id="@+id/noChat_tv"/>


</RelativeLayout>