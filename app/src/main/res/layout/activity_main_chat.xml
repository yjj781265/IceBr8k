<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="app.jayang.icebr8k.MainChatActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/chat_toolbar"
        android:layout_width="match_parent"
        android:elevation="6dp"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <ImageView
        android:id="@+id/inChat_indicator"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="24dp"
        android:visibility="invisible"
        android:src="@drawable/green_dot" />
    </android.support.v7.widget.Toolbar>

    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input_message"
        android:labelFor="@id/chat_toolbar"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chat_toolbar">

  </com.stfalcon.chatkit.messages.MessagesList>
    <com.stfalcon.chatkit.messages.MessageInput
        android:animateLayoutChanges="true"
        android:id="@+id/input_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:focusedByDefault="false"
        android:background="@color/white"
        android:elevation="6dp"
        app:inputTextSize="16dp"
        app:inputHintColor="@android:color/secondary_text_dark_nodisable"
        app:showAttachmentButton="true"
        app:inputButtonDefaultBgColor="@color/colorPrimary"
        app:attachmentButtonDefaultBgPressedColor="@color/accent"
        app:inputHint="@string/message_input_hint"/>




</RelativeLayout>
